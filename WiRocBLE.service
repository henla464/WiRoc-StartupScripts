# WiRocPython service
[Unit]
Description=WiRocBLE: Bluetooth Low Energy GATT service
Wants=network-online.target WiRocPythonWS.service
After=network.target network-online.target WiRocPythonWS.service

[Service]
Type=simple
ExecStart=BLENO_ADVERTISING_INTERVAL=1000 /usr/local/bin/node /home/chip/WiRoc-BLE-Device/main.js &> /home/chip/WiRoc-BLE-Device.log
StandardOutput=syslog
StandardError=syslog
Restart=always
RestartSec=10

[Install]
WantedBy=default.target
